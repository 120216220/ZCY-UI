<div>
  <div class="zcy-modal-mask"></div>
  <div ref="dialog" class="zcy-modal-wrap" role="dialog" tabindex="-1">
      <div role="document" class="zcy-modal {{dialogClass}}" style="width: {{width}}px;">
          <div class="zcy-modal-content">
            {{#if closable}}
              <button aria-label="Close" class="zcy-modal-close">
                <span class="icon-zcy icon-guanbi"></span>
              </button>
            {{/if}}
            {{#if title}}
              <div class="zcy-modal-header">
                <div class="zcy-modal-title">{{title}}</div>
              </div>
            {{/if}}
              <div class="zcy-modal-body">
                {{{template}}}
              </div>
            {{#if hasFooter}}
              <div class="zcy-modal-footer">{{{footer}}}</div>
            {{/if}}
          </div>
          <div tabIndex="0" style="width: 0; height: 0; overflow: hidden;">sentinel</div>
      </div>
  </div>
</div>